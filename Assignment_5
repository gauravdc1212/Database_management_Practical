create table students(
roll number(5),
f_name varchar2(20),
m_name varchar2(20),
l_name varchar2(20),
sec char,
city varchar2(20),
area varchar2(30),
houseNo varchar2(10),
div number(1)
)

drop table students

insert into students (roll, f_name, m_name, l_name, sec, city, area, houseNo, div)
values (1,'Akash', 'Kumar', 'Jian', 'A', 'Ghaziabad', 'Rakesh Marg', 'C-355', 1)


